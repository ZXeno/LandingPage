@model PostModel

@{
    string pageTitle = string.Empty;
    if (Model.Id == 0)
    {
        ViewData["FormAction"] = "NewPost";
        pageTitle = "New Post";
    }
    else
    {
        ViewData["FormAction"] = "EditPost";
        pageTitle = "Edit Post";
    }
}

<div class="container">
    <div class="row">
        <h2>@pageTitle</h2>
    </div>
    <form asp-controller="Post" asp-action="@ViewData["FormAction"]" method="post">
        <div class="form-group">
            <label for="titleTextBox">Title</label>
            <input asp-for="Title" id="titleTextBox" class="form-control" />
        </div>
        <div class="form-group">
            <label class="" for="bodyTextBox">Body</label>
            <textarea asp-for="Body" id="bodyTextBox" class="form-control"></textarea>
        </div>
        <input class="btn btn-primary" type="submit" value="submit" /> &nbsp;
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>